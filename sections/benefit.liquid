<div class="page-width">
  <div class="benefit-section">
    {% for block in section.blocks %}
      <div class="text-box">
        <a href="{{ block.settings.text_link | default:'#' }}">
          {% if block.settings.heading !=blank %}
            <h2 class="title">{{ block.settings.heading }}</h2>
          {% endif %}
        </a>
        {% if block.settings.content !=blank %}
          <div class="description">
            {{ block.settings.content }}
          </div>
        {% endif %}
    </div>
    {% endfor %}
    {% comment %}
    <div class="text-box">
      <h2 class="title">Benefit #2</h2>
      {% comment %}
      <div class="description">
        <p>Sensa guarantees original and authentic products</p>
        <p>Sensa guarantees original and authentic products</p>
        <p>Sensa guarantees original and authentic products</p>
      </div>
      {% endcomment %}
    </div>
    {% endcomment %}
  </div>
</div>


{% schema %}
  {
    "name": "Benefit",
    "settings": [
      
	],
    "blocks":[
      {
        "type": "content",
        "name": "Content",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading Label"
          },
          {
            "type": "url",
            "id": "text_link",
            "label": "Link"
          },
          {
            "type": "richtext",
            "id": "content",
            "label": "Content Label"
          }
        ]
      }      
    ],
    "presets": [
      {
        "name": "Benefit"
      }
    ]
  }
{% endschema %}